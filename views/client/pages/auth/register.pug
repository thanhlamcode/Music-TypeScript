//- Kế thừa layout chính
extends ../../layout/default.pug

//- Khối nội dung chính
block main
  .register-container.center
    .login-form
      img.logo(src="/images/logo.png" alt="InsideBox Logo")
      h2 Start your journey
      h1 Sign Up to InsideBox
      
      form(method="POST" action="/auth/register")
        .form-group
          label(for="email") E-mail
          input#email(type="email" name="email" placeholder="example@email.com" required)
        
        .form-group
          label(for="username") Username
          input#email(type="text" name="username" placeholder="Username" required)

        .form-group
          label(for="password") Password
          input#password(type="password" name="password" placeholder="Password" required)
        
        .form-group
          label(for="confirm_password") Confirm Password
          input#confirm_password(type="password" name="confirm_password" placeholder="Confirm Password" required)

        button.btn-signup(type="submit") Sign Up

        .or-signup-with
          p or sign up with
          .social-icons
            a(href="/auth/facebook").social-icon
              i.fa-brands.fa-facebook
            a(href="/auth/google").social-icon
              i.fa-brands.fa-google
            a(href="/auth/apple").social-icon
              i.fa-brands.fa-apple

      .already-account
        p Already have an account? 
        a(href="/auth/login") Sign in
