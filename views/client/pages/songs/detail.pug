extends ../../layout/default.pug
include ../../mixins/box-head.pug

block main
  .singer-detail
    .container.my-3
      .row
        .col-12
          .inner-title #{song.title}
          .inner-actions
            div(class="inner-action inner-time")
              i(class="fa-regular fa-clock") 
              p 20/10/2023
            div(class="inner-action inner-singer")
              i(class="fa-solid fa-microphone-lines") 
              p #{singer.fullName}
            div(class="inner-action inner-topic")
              i(class="fa-solid fa-music") 
              p #{topic.title}
            div(class="inner-action inner-like" id-song=song.id)
              i(class="fa-regular fa-thumbs-up") 
              p #{song.like} thích
            div(class="inner-action inner-heart")
              i(class="fa-regular fa-heart") 
              p Bài hát yêu thích

          .inner-play
            .inner-avatar
              img(src=song.avatar)
            .inner-audio
              div(id="aplayer" data-song=song data-singer=singer data-topic=topic)

          .inner-desc
            .inner-label Mô tả
            .inner-text
              | #{song.description}

          .inner-desc
            .inner-label Lời bài hát
            .inner-text
              | !{song.lyrics}
